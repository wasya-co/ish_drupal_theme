
{%
  set classes = [
    'layout',
    'layout--onecol-section',
    'maxwidth',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>

    {% if content.main %}
      <div {{ region_attributes.first.addClass('layout__region', 'layout__region--main') }}>
        {{ content.main }}
      </div>
    {% endif %}

  </div>
{% endif %}
